{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vite public/index.html",
    "build": "yarn run clean && vite build",
    "build:dev": "yarn run build --dist-dir ../cmd/web/assets",
    "clean": "yarn run rimraf ../cmd/web/assets",
    "lint": "eslint",
    "format:eslint": "eslint '*.cjs' 'src/**/*.{ts,vue}' --fix",
    "format:prettier": "prettier '*.cjs' 'src/**/*.{ts,vue}' --write"
  },
  "dependencies": {
    "vue": "^3.1.2",
    "vue-i18n": "^9.1.2",
    "vue-router": "^4.0.6",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@intlify/vite-plugin-vue-i18n": "^6.0.1",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "@vitejs/plugin-vue": "^3.0.3",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-vue": "^7.8.0",
    "lint-staged": "^11.2.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "~4.2.4",
    "vite": "^3.0.9",
    "vue-tsc": "^0.40.6"
  }
}
